{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "PlayList",
	"description": "An PlayList description",
	"type": "object",
	"swagger": {
		"name": "PlayList description",
		"description": "schema for PlayList description"
	},
	"properties": {
		"id": {
			"type": "string",
			"required": true,
			"minLength": 64,
			"maxLength": 128,
			"swagger": {
				"type": "String",
				"description": "id of the playlist",
				"minLength": 64,
				"maxLength": 128,
				"example": "12345678901234567890123456789012"
			}
		},
		"title": {
			"type": "string",
			"required": true,
			"maxLength": 128,
			"swagger": {
				"type": "String",
				"description": "title of the playlist",
				"maxLength": 128,
				"example": "the best playlist"
			}
		},
		"description": {
			"type": "string",
			"maxLength": 128,
			"swagger": {
				"type": "String",
				"description": "description of the playlist",
				"maxLength": 128,
				"example": "the best playlist including most famous songs of 90s"
			}
		},
		"cover_id": {
			"type": "string",
			"minLength": 64,
			"maxLength": 128,
			"swagger": {
				"type": "String",
				"description": "cover id of the music",
				"minLength": 64,
				"maxLength": 128,
				"example": "12345678901234567890123456789012"
			}
		}
	}
}
